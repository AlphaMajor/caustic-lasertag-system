<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <SwitchPreference
        android:defaultValue="true"
        android:key="gps_switch"
        android:summary="@string/pref_description_gps_tracking"
        android:title="@string/pref_title_gps_tracking" />

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:defaultValue="@string/pref_default_display_name"
        android:inputType="textCapWords"
        android:key="display_name_key"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_display_name" />


    <Preference
        android:defaultValue="#FF0000"
        android:key="marker_color_key"
        android:summary="Color of your marker on HUD"
        android:title="Marker color"
        />

    <Preference android:title="@string/prefs_custom_map"
        android:summary="Select a custom map background to be displayed on HUD instead of Google Maps">
        <intent android:targetClass="android.intent.action.GET_CONTENT"
            android:mimeType="image/jpeg" />
    </Preference>


</PreferenceScreen>
