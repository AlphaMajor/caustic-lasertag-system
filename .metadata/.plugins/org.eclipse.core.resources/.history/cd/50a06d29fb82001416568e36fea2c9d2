#ifndef LAZERTAG_DEVICE_INCLUDE_RIFLE_HPP_
#define LAZERTAG_DEVICE_INCLUDE_RIFLE_HPP_


enum RifleMagazinesMode
{
	RMU_FIXED_COUNT = 0,       // Fixed count when respawn
	RMU_LIMITED,             // Unlimited
	RMU_INTELLECTUAL_MAGAZINE  // Magazine contains it's own MCU and provide bullets count
};

enum RifleReloadMode
{
	RMU_ONLY_SHUTTER = 1,   // Disort the shutter
	RMU_CHANGE_MAGAZINE,    // Change MCU-free magazines
};

enum RifleMagazine
class Rifle
{
public:
	class Configuration
	{
	public:
		uint8_t slot;
		uint8_t weightInSlot;
		uint8_t damage;
		RifleMagazinesMode magazinesMode;
		uint8_t magazinesCount;


	};
private:
};





#endif /* LAZERTAG_DEVICE_INCLUDE_RIFLE_HPP_ */
